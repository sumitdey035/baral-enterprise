<h1 class="mt-4">
  <span>Customers</span>
  <span class="float-right"><%= link_to 'New Customer', new_customer_path, class: 'btn btn-primary' %></span>
</h1>


<div class="table-responsive">
  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th>Name</th>
        <th>Primary phone no</th>
        <th>Secondary phone no</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th>Name</th>
        <th>Primary phone no</th>
        <th>Secondary phone no</th>
        <th colspan="3"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.name, customer %></td>
          <td><%= customer.primary_phone_no %></td>
          <td><%= customer.secondary_phone_no %></td>
          <td>
            <%= link_to edit_customer_path(customer) do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
