<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header">
          <h3 class="text-center font-weight-light my-4">Login</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: 'small mb-1' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control py-4', placeholder: 'Enter email address' %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: 'small mb-1' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control py-4', placeholder: 'Enter password' %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <div class="custom-control custom-checkbox">
                  <%= f.check_box :remember_me, class: 'custom-control-input' %>
                  <label class="custom-control-label" for="rememberPasswordCheck">Remember password</label>
                </div>
              </div>
            <% end %>
            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
<!--              <a class="small" href="password.html">Forgot Password?</a>-->
              <%= f.submit 'Login', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
        <% if false %>
          <div class="card-footer text-center">
            <%= render "users/shared/links" %>
            <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

