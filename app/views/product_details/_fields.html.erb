<div class="row">
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.label :category %>
      <%= f.text_field :category, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :sub_category %>
      <%= f.text_field :sub_category, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :purchased_from %>
      <%= f.text_field :purchased_from, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :bill_no %>
      <%= f.text_field :bill_no, class: 'form-control' %>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="form-group">
      <%= f.label :bill_date %>
      <%= f.date_select :bill_date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :warranty %>
      <%= f.check_box :warranty, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :modelcode %>
      <%= f.text_field :modelcode, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :modelname %>
      <%= f.text_field :modelname, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :serial_no %>
      <%= f.text_field :serial_no, class: 'form-control' %>
    </div>
  </div>
</div>
