<p id="notice"><%= notice %></p>

<h1>Product Details</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Sub category</th>
      <th>Quantity</th>
      <th>Purchased from</th>
      <th>Bill no</th>
      <th>Bill date</th>
      <th>Warranty</th>
      <th>Model code</th>
      <th>Model name</th>
      <th>Serial no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_details.each do |product_detail| %>
      <tr>
        <td><%= product_detail.category %></td>
        <td><%= product_detail.sub_category %></td>
        <td><%= product_detail.quantity %></td>
        <td><%= product_detail.purchased_from %></td>
        <td><%= product_detail.bill_no %></td>
        <td><%= product_detail.bill_date %></td>
        <td><%= product_detail.warranty %></td>
        <td><%= product_detail.model_code %></td>
        <td><%= product_detail.model_name %></td>
        <td><%= product_detail.serial_no %></td>
        <td><%= link_to 'Show', product_detail %></td>
        <td><%= link_to 'Edit', edit_product_detail_path(product_detail) %></td>
        <td><%= link_to 'Destroy', product_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

