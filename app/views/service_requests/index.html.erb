<h1>Service Requests</h1>

<table>
  <thead>
    <tr>
      <th>Call</th>
      <th>Problem</th>
      <th>Status</th>
      <th>Customer remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_requests.each do |service_request| %>
      <tr>
        <td><%= service_request.call_id %></td>
        <td><%= service_request.problem %></td>
        <td><%= service_request.status %></td>
        <td><%= service_request.customer_remark %></td>
        <td><%= link_to 'Show', service_request %></td>
        <td><%= link_to 'Edit', edit_service_request_path(service_request) %></td>
        <td><%= link_to 'Destroy', service_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service Request', new_service_request_path %>
