<%= form_with(model: [@customer, service_request], local: true) do |form| %>
  <% if service_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service_request.errors.count, "error") %> prohibited this service_request from being saved:</h2>

      <ul>
        <% service_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :problem %>
    <%= form.text_area :problem %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(ServiceRequest.statuses.map {|k, v| [k.humanize.capitalize, k]}) %>
  </div>

  <div class="field">
    <%= form.label :customer_remark %>
    <%= form.text_area :customer_remark %>
  </div>

  <div class="field">
    <%= form.label :address_id %>
    <% @customer.addresses.each do |address| %>
      <%= form.radio_button :address_id, address.id %>
      <%= address.street %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
