<h1 class="mt-4">Dashboard</h1>

<%= render 'stats' %>

<div class="card mb-4">
  <div class="card-header"><i class="fas fa-table mr-1"></i>Service Requests</div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Call</th>
            <th>Customer</th>
            <th>Problem</th>
            <th>Status</th>
            <th>Customer remark</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Call</th>
            <th>Customer</th>
            <th>Problem</th>
            <th>Status</th>
            <th>Customer remark</th>
            <th colspan="3"></th>
          </tr>
        </tfoot>
        <tbody>
          <%= render ServiceRequest.all %>
        </tbody>
      </table>
    </div>
  </div>
</div>
